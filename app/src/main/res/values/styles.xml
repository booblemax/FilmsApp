<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="Text" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_14dp</item>
    </style>

    <style name="Text_10" parent="Text">
        <item name="android:textSize">@dimen/text_size_10dp</item>
    </style>

    <style name="Text_12" parent="Text">
        <item name="android:textSize">@dimen/text_size_12dp</item>
    </style>

    <style name="Text.Gray" parent="Text">
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="Text_13" parent="Text">
        <item name="android:textSize">@dimen/text_size_13dp</item>
    </style>

    <style name="Text_13.White" parent="Text_13">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Text_15" parent="Text">
        <item name="android:textSize">@dimen/text_size_15dp</item>
    </style>

    <style name="Text_17" parent="Text">
        <item name="android:textSize">@dimen/text_size_17dp</item>
    </style>

    <style name="Text_19" parent="Text">
        <item name="android:textSize">@dimen/text_size_19dp</item>
    </style>

    <style name="Text_19.White" parent="Text_19">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Text_19.White.Bold" parent="Text_19.White">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text_24" parent="Text">
        <item name="android:textSize">@dimen/text_size_24dp</item>
    </style>

    <style name="Text_24.White" parent="Text_24">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Text_24.White.Bold" parent="Text_24.White">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="android:minHeight">16dp</item>
        <item name="android:maxHeight">16dp</item>
        <item name="android:colorControlNormal">@color/yellow</item>
        <item name="android:colorControlActivated">@color/yellow</item>
        <item name="android:colorControlHighlight">@color/yellow</item>
    </style>

</resources>
